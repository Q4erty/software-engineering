<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="create-request-operators" author="q4erty">

        <createTable tableName="c_request_operators">
            <column name="t_request_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="t_operator_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseColumnNames="t_request_id"
                baseTableName="c_request_operators"
                constraintName="fk_request_operator_request"
                referencedColumnNames="id"
                referencedTableName="c_application_request"/>

        <addForeignKeyConstraint
                baseColumnNames="t_operator_id"
                baseTableName="c_request_operators"
                constraintName="fk_request_operator_operator"
                referencedColumnNames="id"
                referencedTableName="t_operators"/>

    </changeSet>

</databaseChangeLog>
